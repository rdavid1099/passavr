<div class="container">
  <% flash.each do |type, message| %>
    <% if type == "notice" %>
      <div class="alert alert-success">
    <% elsif type == "alert" %>
      <div class="alert alert-danger">
    <% else %>
      <div class='alert alert-<%= "#{type}" %>'>
    <% end %>
    <a href="#" class="close" data-dismiss="alert">&#215;</a>
    <%= message %>
  <% end %>
</div>
